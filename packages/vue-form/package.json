{
	"name": "@ez-kits/form-vue",
	"private": false,
	"version": "0.0.0",
	"description": "Powerful, type-safe, easy-to-use form package",
	"author": {
		"name": "Niku",
		"email": "phammah.1221998@gmail.com",
		"url": "https://github.com/niku98"
	},
	"repository": {
		"url": "https://github.com/Ez-Kits/form"
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/index.d.ts",
				"default": "./dist/index.js"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./plugin": {
			"require": {
				"default": "./dist/plugin.cjs",
				"types": "./dist/plugin.d.cts"
			},
			"import": {
				"default": "./dist/plugin.js",
				"types": "./dist/plugin.d.ts"
			}
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"scripts": {
		"dev": "tsup --watch",
		"build": "tsup",
		"lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md",
		"package.json"
	],
	"dependencies": {
		"@ez-kits/form-core": "*"
	},
	"peerDependencies": {
		"vue": "^3.5.6"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"eslint": "^8.44.0",
		"eslint-plugin-vue": "9.15.1",
		"tsup": "^7.1.0",
		"typescript": "^5.0.2",
		"vue": "^3.5.6",
		"@ez-kits/form-async-validator": "*",
		"@ez-kits/form-yup-validator": "*",
		"@ez-kits/form-zod-validator": "*",
		"async-validator": "^4.2.5",
		"yup": "^1.4.0",
		"zod": "^3.23.8"
	}
}
